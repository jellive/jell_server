{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": false,
        "quotemark": false,
        "trailing-comma": false,
        "curly": [true, "ignore-same-line", "as-needed"],
        "object-literal-shorthand": false,
        "interface-name": false,
        "max-line-length": [true, {"limit": 80, "ignore-pattern": "^[\t\\s]*(.+)$"}]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "./node_modules"
        ]
    }
}